<h1>Users</h1>

<ul>
    <% @users.each do |user| %>
        <li>
            <%= user.name %>
            <% if user.online? %>
                - <%= "online" %>
            <% end %>
            <% if current_user.admin? && current_user != user %>
                <%= link_to 'delete', user, method: :delete, data: { confirm: "Are you sure?" } %>
            <% end %>
        </li>
                <%= "*" * 50 %>
    <% end %>
</ul>

<%= link_to 'Return to home page', root_path %>
